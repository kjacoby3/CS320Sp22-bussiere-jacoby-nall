<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>LoginAjaxServlet</servlet-name>
    <servlet-class>cs320.TBAG.servlet.ajax.LoginAjaxServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>CreateAccountAjaxServlet</servlet-name>
    <servlet-class>cs320.TBAG.servlet.ajax.CreateAccountAjaxServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>LoadGameAjaxServlet</servlet-name>
    <servlet-class>cs320.TBAG.servlet.ajax.LoadGameAjaxServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>MainMenuServlet</servlet-name>
    <servlet-class>cs320.TBAG.servlet.MainMenuServlet</servlet-class>
  </servlet>
  
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cs320.TBAG.servlet.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>GameServlet</servlet-name>
  	<servlet-class>cs320.TBAG.servlet.GameServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>InventoryServlet</servlet-name>
  	<servlet-class>cs320.TBAG.servlet.InventoryServlet</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>CombatServlet</servlet-name>
  	<servlet-class>cs320.TBAG.servlet.CombatServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateAccountServlet</servlet-name>
  	<servlet-class>cs320.TBAG.servlet.CreateAccountServlet</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>LevelUpServlet</servlet-name>
  	<servlet-class>cs320.TBAG.servlet.LevelUpServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>LoginAjaxServlet</servlet-name>
    <url-pattern>/loginAjax</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateAccountAjaxServlet</servlet-name>
    <url-pattern>/createAccountAjax</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoadGameAjaxServlet</servlet-name>
    <url-pattern>/loadGameAjax</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>MainMenuServlet</servlet-name>
    <url-pattern>/mainMenu</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>GameServlet</servlet-name>
  	<url-pattern>/game</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>InventoryServlet</servlet-name>
  	<url-pattern>/inventory</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>CombatServlet</servlet-name>
  	<url-pattern>/combat</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>CreateAccountServlet</servlet-name>
  	<url-pattern>/createAccount</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
  	<servlet-name>LevelUpServlet</servlet-name>
  	<url-pattern>/levelUp</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>mainMenu</welcome-file>
  </welcome-file-list>
</web-app>


